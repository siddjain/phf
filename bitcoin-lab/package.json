{
    "name": "bitcoin-lab",
    "version": "0.0.1",
    "description": "Bitcoin Lab",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "engines": {
        "node": ">=8",
        "npm": ">=5"
    },
    "scripts": {
        "lint": "tslint -c tslint.json 'src/**/*.ts'",
        "pretest": "npm run lint",
        "build": "tsc",
        "build:watch": "tsc -w",
        "prepublishOnly": "npm run build",
        "test": "nyc mocha -r ts-node/register test/**/*.spec.ts"
    },
    "engineStrict": true,
    "author": "Siddharth Jain",
    "license": "Apache-2.0",
    "dependencies": {
        "bitcoinjs-lib": "5.1.6"
    },
    "devDependencies": {
        "@types/node": "^12.7.3",
        "@types/chai": "^4.2.0",
        "@types/chai-as-promised": "^7.1.2",
        "@types/sinon": "^7.0.13",
        "@types/sinon-chai": "^3.2.3",
        "@types/mocha": "^5.2.7",
        "ts-node": "^8.3.0",
        "tslint": "^5.19.0",
        "typescript": "^3.6.2",
        "winston": "^3.2.1",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "sinon": "^7.4.1",
        "sinon-chai": "^3.3.0",
        "mocha": "^6.2.0",
        "nyc": "^14.1.1",
        "minimist": ">=0.2.1"
    },
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "coverage/**",
            "dist/**"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "all": true,
        "check-coverage": true,
        "statements": 10,
        "branches": 10,
        "functions": 10,
        "lines": 10
    }
}
